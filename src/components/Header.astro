---
import "../css/generelt.css";

import "../css/afvigelser.css";
---
<header>
  <div class="container">
    <div class="subcontainer">
      <nav class="navbar">
        <ul class="nav-menu">
          <div class="logo">
        <li class="nav-item"><a href="/"><img class="logo" src="../../public/logoer/redlogo.png" alt="logo" /></a></li>
          </div>
          <div></div>
          <li class="nav-item"><a class="nav-link" href="/">SHOP</a></li>
          <li class="nav-item"><a class="nav-link" href="/liste">OM PYOMA</a></li>
          <li class="nav-item"><a class="nav-link" href="/produkter">KONTAKT</a></li>

          <div class="daen">
            <img src="" alt="DaEn">
          </div>

          <div class="kurv">
         <img src="" alt="Kurv">
          </div>
        </ul>
    
          <div class="hamburger">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
          </div>
      </nav>
    </div>
      </div>
</header>

    <script>
      const hamburger = document.querySelector(".hamburger");
      const navMenu = document.querySelector(".nav-menu");

      hamburger.addEventListener("click", () => {
        hamburger.classList.toggle("active");
        navMenu.classList.toggle("active");
      });

      document.querySelectorAll(".nav-link").forEach((n) =>
        n.addEventListener("click", () => {
          hamburger.classList.remove("active");
          navMenu.classList.remove("active");
        })
      );
    </script>

    <style>
      /* MOBILE VERSION */
      .logo {
        width: 60px;
        height: auto;
      }
      .menu-section {
        display: flex;
        align-items: center;
      }
      ul {
        list-style-type: none;
        text-align: right;
      }

      li {
        display: inline;
      }

      li a {
      font-family: "minion_proregular";
     color: var(--mahogany-red);
        font-size: 20px;
        text-align: right;
        text-decoration: none;
        justify-content: space-evenly;
        border-radius: 40px;
        padding: 20px;
      }

      .navbar li a:hover {
        color: var(--light-mahogany-red);
      }

      a.active {
        color: var(--light-mahogany-red);
      }

      header {
        background-color: transparent;
        top: 0%;
        padding: 0.8rem 0.8rem;
        width: 100%;
      }

      .container {
        width: 100%;
        margin: auto;
      }

      .subcontainer {
        width: auto;
        margin: auto;
      }

      .navbar {
        width: 100%;
        min-height: 7px;
        justify-content: space-between;
        align-items: center;
      }

      .nav-menu {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
      }

      .hamburger {
        display: block;
        cursor: pointer;
      }

      .bar {
        display: block;
        width: 30px;
        height: 2px;
        margin: 5px 0;
        transition: all 0.8s ease;
        background-color: var(--mahogany-red);
      }

      .hamburger.active .bar:nth-child(2) {
        opacity: 0;
      }

      .hamburger.active .bar:nth-child(1) {
      transform: translateY(6px) rotate(40deg);
      }

      .hamburger.active .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
      }

      .nav-menu {
        position: absolute;
        left: -200%;
        top: 0;
        gap: 0;
        flex-direction: column;
        background-color: var(--desert-storm-white);
        width: 100%;
        text-align: center;
        transition: 0.3s;
        z-index: 0;
      }

      .nav-item {
        margin: 16px 0;
      }

      .nav-menu.active {
        left: 0;
      }

  /* DESKTOP VERSION */
  @media (min-width: 750px) 
      {
  .hamburger{
   display: none;
        }

  .logo {
  width: 80px;
  height: auto;
}

  /*  sticy: positioneret element indtil en bestemt scroll-position nås, hvorefter det bliver fastgjort og opfører sig som et fast positioneret element.
sticky: menuen forbliver øverst på siden, når man scroller ned */
  header {
  background-color: var(--desert-storm-white);
  position: sticky;
}

/* Containeren fylder hele bredden og centrerer indholdet både vandret og lodret
justify-content: centrere flex-elementerne horisontalt inden for containeren. */
.container {
  width: 100%;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

li a {
  font-family: "minion_proregular";
  color: var(--mahogany-red);
  font-size: 20px;
  text-align: right;
  text-decoration: none;
  justify-content: space-evenly;
}

.navbar {
  width: 100%;
  min-height: 70px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* justify-content: space-between; er en CSS-egenskab, der bruges i flexbox-layout til at justere flex-elementerne med lige stor afstand mellem dem. */         
.nav-menu{
  position: static;
  display: flex;
  flex-direction: row;
  gap: 20px;
  width: auto;
  background-color: var(--desert-storm-white);
  justify-content: space-between;
  align-items: center;
        }
      }
    </style>

