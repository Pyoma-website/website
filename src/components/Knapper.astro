---
const { variant } = Astro.props;
---

<button class={variant}>
  <slot />
</button>


<style>
   .primary {
      cursor: pointer;
      width: 200px;
      padding: 10px 25px;
      border: none;
      box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
      background-color: var(--mahogany-red);

      color: var(--desert-storm-white);
      font-family: "minion_proregular";
      font-size: 1.25rem; 
      font-weight: bold;
      text-align: start;
      }

   .primary:hover{
      background-color: var(--light-mahogany-red);
      }

   .second {
      cursor: pointer;
      padding: 10px 25px;
      border: solid 1px;
      border-color: var(--mahogany-red);
      box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
      background-color: #ffffff00;  

      color: var(--mahogany-red);
      font-family: "minion_proregular";
      font-size: 1.25rem;
      font-style: italic;
   }
   
   .second:hover {
      background: var(--light-mahogany-red);
      border-color: var(--light-mahogany-red); 

      color: var(--desert-storm-white); 
   }
</style>