---
import "../css/generelt.css"
import HeaderRed from "../components/Header_red.astro"
---

<!doctype html>
<html lang="da">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">    
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com"> <!--Henter Google-font -->
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> <!--Henter Google-font -->
		<link href="https://fonts.googleapis.com/css2?family=Pinyon+Script&display=swap" rel="stylesheet"> <!--Henter Google-font -->
		<title>Forside</title>
	</head>
      <body class="forside_body">
      <HeaderRed />
    <main>
<div class="forside_container">
    <div class="first_one">
      <img class="forside_backg" src="/forside/forside_billede.webp" alt="pige">
    </div>
    <div class="overlay_content">
      <img class="forside_logo" src="/logoer/forside_dessert.png" alt="dessertlogo">
      <h1 class="forside_h1">Italiensk vintage</h1>
    </div>
    <div class="forside_turn">
      <p class="knap_overskrift">NYESTE DROP</p>
      <a href="/shop">
      <button class="forside_knap" type="button">Drop 10</button></a>
   </div>
</div>
  </main>
  </body>
</html>


<style>
  /* MOBILE VERSION */
    body {
        background: var(--mahogany-red);
        overflow: hidden;
}

  p {
   padding-top: 0;
  }
    .forside_h1 {
        color: var(--desert-storm-white);
}
    .forside_container{
        display: grid;
        grid-template-columns: 3fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        height: 100vh; 
        width: 100%; 
        position: relative; 
}
    .first_one{
        grid-column: 1/2;
        grid-row: 1/4;
}
    .forside_backg{
        height: 100%;
        object-fit: cover;
        object-position: 55% 100%;
}
      .overlay_content{
        padding-top: 60px;
        position: absolute;
        margin-left: var(--mobile-40);
}
  
.forside_turn{
        writing-mode: vertical-rl;
        text-orientation: sideways;
        grid-column: 2/3;
        grid-row: 3/4;
        letter-spacing: 4.8px;
        margin-block: auto;
}
  .forside_knap{
        cursor: pointer;
        padding: 15px 6px;
        border: solid 1px;
        border-color: var(--desert-storm-white);
        box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.25);
        background-color: #ffffff00;  

        color: var(--desert-storm-white);
        font-family: "minion_proregular";
        font-size: 1.25rem;
        text-transform: uppercase;
        letter-spacing: 4.8px;
}
  .forside_knap:hover {
        background: var(--desert-storm-white);
        border-color: var(--desert-storm-white); 
        color: var(--mahogany-red); 
}
  .knap_overskrift{
        color: var(--desert-storm-white);
        padding-right: 10px;
        padding-left: 10px;
}

/* DESKTOP VERSION */
@media(min-width:650px){
    .forside_container{
        grid-template-columns: 4fr 1fr;
        grid-template-rows: 2fr 1.5fr;
  }
    .first_one{
        padding-top: var(--desk-80);
        object-position: 55% 100%;
  }
    .forside_logo {
        margin-top: -8rem; 
  }

    .forside_h1 {
        text-align: end;
  }
    .forside_turn{
        grid-row: 2/3;
        place-self: start center;
  }
  .knap_overskrift{
        padding-left: 20px;
  }
}
</style>